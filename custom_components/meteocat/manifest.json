{
    "domain": "meteocat",
    "name": "Meteocat",
    "version": "0.0.1",
    "documentation": "https://github.com/fxreina/homeassistant-meteocat",
    "issue_tracker": "https://www.example.com/my-custom-integration-issues",
    "codeowners": ["@your-github-username"],
    "requirements": [],
    "dependencies": [],
    "config_flow": true,
    "homeassistant": ">=2021.1.0",
    "translations": ["en"],
    "mqtt": {
      "publish": [
        {
          "topic": "meteocat_forecast/state",
          "payload": "{% set state = states('sensor.my_custom_sensor') %}{{ state }}"
        }
      ],
      "subscribe": [
        {
          "topic": "meteocat_forecast/command",
          "qos": 0
        }
      ]
    },
    "config": {
      "region_id": {
        "name": "Region ID",
        "description": "The ID of the region pull the forecast for",
        "required": true,
        "type": "string"
        }
    }
}